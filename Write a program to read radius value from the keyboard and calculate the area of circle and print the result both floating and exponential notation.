#include <stdio.h>
#define PI 3.14159

int main() {
    double radius, area;

    // Read the radius from the user
    printf("Enter the radius of the circle: ");
    scanf("%lf", &radius);

    // Calculate the area of the circle
    area = PI * radius * radius;

    // Print the area in both floating-point and exponential notation
    printf("Area of the circle (floating-point): %.6f\n", area);
    printf("Area of the circle (exponential notation): %.6e\n", area);

    return 0;
}
